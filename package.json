{
  "name": "spruthub-mcp-server",
  "version": "1.3.14",
  "description": "MCP server for controlling Sprut.hub smart home devices with dynamic JSON-RPC API discovery",
  "main": "src/index.js",
  "bin": {
    "spruthub-mcp-server": "src/index.js"
  },
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "inspect": "node -r dotenv/config ./node_modules/@modelcontextprotocol/inspector/cli/build/cli.js node src/index.js",
    "test": "node --experimental-vm-modules ./node_modules/.bin/jest",
    "test:coverage": "node --experimental-vm-modules ./node_modules/.bin/jest --coverage",
    "test:watch": "node --experimental-vm-modules ./node_modules/.bin/jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepush": "npm run lint && npm test"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "spruthub",
    "smart-home",
    "iot",
    "home-automation"
  ],
  "author": "shady2k <shady2k@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "spruthub-client": "^1.2.14"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.16.5",
    "dotenv": "^17.2.1",
    "eslint": "^8.0.0",
    "jest": "^29.0.0"
  },
  "engines": {
    "node": ">=22.7.5"
  }
}
